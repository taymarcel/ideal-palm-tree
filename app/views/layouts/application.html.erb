
<!DOCTYPE html>
<html>
<head>
  <title>Taylor's Books: Online Store</title>
  <%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= @page_title || "Taylor's Bookshelf" %>
  </div>
  
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>

      <ul>
        <li><a href="https://thirdtime-taymarcel.c9users.io/">Home</a></li>
        <li><a href="https://thirdtime-taymarcel.c9users.io/static_pages/questions">Questions</a></li>
        <li><a href="https://thirdtime-taymarcel.c9users.io/static_pages/news">News</a></li>
        <li><a href="https://thirdtime-taymarcel.c9users.io/static_pages/contact">Contact</a></li>
      </ul>

      
        <ul>
          <li><%= link_to 'Orders',   orders_path   %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users',    users_path    %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete   %>
     
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
